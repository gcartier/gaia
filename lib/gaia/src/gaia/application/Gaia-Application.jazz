(cond-expand
  (cocoa
    (definition (platform-tile-gaia/world debuggee mode)
      (let ((handle (get-handle~ (get-toplevel))))
        (let ((rect (get-frame-rect~ (main-screen))))
          (let ((left (get-left~ rect))
                (top (get-top~ rect))
                (right (get-right~ rect))
                (bottom (get-bottom~ rect)))
            (let ((width (- right left)))
              (let ((world-width (case mode
                                   ((live) (fxround (percent width 45.5)))
                                   ((design) (- width 300)))))
                (with-NSRect (new Rect world-width 0 width bottom)
                  (lambda (rect)
                    (platformEnterWindowed handle rect #f)))
                @wait
                (receive (server clients) (collect-world-debuggees)
                  (let ((debuggees (append clients (if server (list server) '()))))
                    (let ((count (length debuggees))
                          (rank 0)
                          (area-height (- bottom top)))
                      (for-each (lambda (debuggee)
                                  (let ((height (fxround (exact->inexact (/ area-height count)))))
                                    (let ((top (* height rank)))
                                      (let ((rect (new Rect 0 top world-width (+ top height))))
                                        (position-world~ debuggee rect))))
                                  (increase! rank))
                                debuggees)))))))))))
  (windows
    (definition (platform-tile-gaia/world debuggee mode)
      (let ((handle (get-handle~ (get-toplevel))))
        (set-style handle (bitwise-ior WS_CLIPSIBLINGS
                                       WS_CLIPCHILDREN
                                       WS_POPUP))
        (let ((area (get-display-area~ (primary-monitor))))
          (let ((left (get-left~ area))
                (top (get-top~ area))
                (right (get-right~ area))
                (bottom (get-bottom~ area)))
            (let ((width (- right left)))
              (let ((world-width (case mode
                                   ((live) (fxround (percent width 45.5)))
                                   ((design) (- width 300)))))
                (SetWindowPos handle HWND_TOP
                  world-width
                  0
                  (- width world-width)
                  (- bottom top)
                  (bitwise-ior SWP_NOOWNERZORDER SWP_FRAMECHANGED))
                (show-window handle)
                (receive (server clients) (collect-world-debuggees)
                  (let ((debuggees (append clients (if server (list server) '()))))
                    (let ((count (length debuggees))
                          (rank 0)
                          (area-height (- bottom top)))
                      (for-each (lambda (debuggee)
                                  (let ((height (fxround (exact->inexact (/ area-height count)))))
                                    (let ((top (* height rank)))
                                      (let ((rect (new Rect 0 top world-width (+ top height))))
                                        (position-world~ debuggee rect))))
                                  (increase! rank))
                                debuggees)))))))))))
  (else
    (definition (platform-tile-gaia/world debuggee mode)
      )))


(cond-expand
