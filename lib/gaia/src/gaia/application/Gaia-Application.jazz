  ;;;
  ;;;; World
  ;;;
  
  
  (method (show-properties debuggee class properties)
    (let ((host (find-singleton-docked 'Live-Properties)))
      (when host
        (let ((text (get-text~ (get-guest~ host))))
          (show-properties~ text debuggee class properties)))))
  
  
  (method (live-gaia/world (debuggee #f))
    (tile-gaia/world debuggee 'live))
  
  
  (method (design-gaia/world (debuggee #f))
    (tile-gaia/world debuggee 'design))
  
  
  (cond-expand
    (cocoa
      (method (tile-gaia/world debuggee mode)
        (when (eq? current-state 'restored)
          (let ((toplevel (get-toplevel)))
            (set! previous-workspace (get-name~ (selected-workspace)))))
        (change-scrollbar-style #t)
        (case mode
          ((live)
           (select-workspace 'live)
           (full-screen~ (get-application) #t))
          ((design)
           (select-workspace 'design)
           (full-screen-host~ (get-application) (find-singleton-docked 'Live-Properties) #t)))
        (platform-tile-gaia/world debuggee mode)
        (set! current-state 'tiled)))
    (else
      (method (tile-gaia/world debuggee mode)
        (when (eq? current-state 'restored)
          (let ((toplevel (get-toplevel)))
            (set! previous-placement (get-placement~ toplevel))
            (set! previous-workspace (get-name~ (selected-workspace)))))
        (show-taskbar #f)
        (change-scrollbar-style #t)
        (case mode
          ((live)
           (select-workspace 'live)
           (full-screen~ (get-application) #t))
          ((design)
           (select-workspace 'design)
           (full-screen-host~ (get-application) (find-singleton-docked 'Live-Properties) #t)))
        (platform-tile-gaia/world debuggee mode)
        (set! current-state 'tiled))))
  
  
  (cond-expand
    (cocoa
      (method (restore-gaia/world (debuggee #f))
        (change-scrollbar-style #f)
        (select-workspace (or previous-workspace 'text))
        (full-screen~ (get-application) #f)
        (platform-restore-gaia/world debuggee)
        @wait
        (receive (server clients) (collect-world-debuggees)
          (let ((debuggees (append clients (if server (list server) '()))))
            (for-each (lambda (debuggee)
                        (restore-world~ debuggee))
                      debuggees)))
        (set! previous-workspace #f)
        (set! current-state 'restored)))
    (else
      (method (restore-gaia/world (debuggee #f))
        (show-taskbar #t)
        (change-scrollbar-style #f)
        (select-workspace (or previous-workspace 'text))
        (full-screen~ (get-application) #f)
        (platform-restore-gaia/world debuggee)
        (if previous-placement
            (set-placement~ (get-toplevel) previous-placement)
          (show-window~ (get-toplevel)))
        (receive (server clients) (collect-world-debuggees)
          (let ((debuggees (append clients (if server (list server) '()))))
            (for-each (lambda (debuggee)
                        (restore-world~ debuggee))
                      debuggees)))
        (set! previous-placement #f)
        (set! previous-workspace #f)
        (set! current-state 'restored))))
  
  
